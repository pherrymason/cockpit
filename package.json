{
    "name": "cockpit-next",
    "version": "0.9.3",
    "license": "MIT",
    "scripts": {
        "build-dev": "webpack --mode=development --watch",
        "build": "npm run build-style && npm run build-components && webpack --mode=production",
        "build-style": "lessc assets/app/css/style.less > assets/app/css/style.css -x",
        "build-components": "riot modules/Cockpit/assets/components modules/Cockpit/assets/components.js",
        "watch": "npm run watch-style & npm run watch-components",
        "watch-style": "watch-run -i -p 'assets/app/css/**/*.less' npm run build-style",
        "watch-components": "watch-run -i -p 'modules/Cockpit/assets/components/*.tag' npm run build-components",
        "docker-init": "docker build -t cockpit/dev .",
        "docker": "docker run -p 8080:80 -v $PWD:/var/www/html cockpit/dev & open http://localhost:8080/install"
    },
    "devDependencies": {
        "@babel/core": "^7.22.9",
        "@babel/preset-env": "^7.22.9",
        "@babel/preset-react": "^7.22.5",
        "@babel/preset-typescript": "^7.22.5",
        "babel-loader": "^9.1.3",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "core-js": "^3.31.1",
        "css-loader": "^6.8.1",
        "less": "^2.6.0",
        "riot-cli": "^3.0.0",
        "watch-run": "^1.2.4",
        "webpack": "^5.88.2",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "@uppy/core": "^3.3.1",
        "@uppy/react": "^3.1.3",
        "@uppy/xhr-upload": "^3.3.1",
        "dotenv-webpack": "^8.0.1",
        "react": "^16",
        "react-dom": "^16",
        "react-tag-autocomplete": "^6.3.0",
        "react-use": "^17.4.0",
        "redaxios": "^0.4.1",
        "reffects": "1.6.1-alpha.0",
        "reffects-batteries": "1.5.3-alpha.0",
        "reffects-store": "1.5.4-alpha.0"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead"
    ]
}
